interactor :off
notification :off

guard :shell do
  file = 'result/guard_result'
  color = nil

  watch file do
    puts Time.new
    puts `cat #{file}|sed 's/^/\t/'`
    puts

    `blink1-tool -l 2 --rgb="#{color}" --blink=1 -t 0` if color

    color = `blink1-color $(head -1 #{file})`.strip

    `blink1-tool -l 2 --rgb="#{color}"`
  end
end

