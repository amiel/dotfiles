[user]
  name = GIT_NAME
  email = GIT_EMAIL

[github]
  user = GITHUB_USER
  token = GITHUB_TOKEN

[diff "exif"]
  # brew install exiftool
  textconv = exiftool


[core]
  # editor         = mate -w
  # I'd rather edit my commit messages in vim.
  # Use the above for textmate
  editor           = vim
  filemode         = true
  logallrefupdates = true
  whitespace       = fix, space-before-tab, trailing-space
  autocrlf         = true

[merge]
  tool = opendiff

[color]
  branch    = auto
  diff      = auto
  status    = auto
[color "branch"]
  current   = yellow reverse
  local     = yellow
  remote    = green
[color "diff"]
  meta      = yellow bold
  frag      = magenta bold
  old       = red bold
  new       = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[color]
  ui = true

[alias]
  st      = status -sb
  ci      = commit
  dif     = diff --word-diff
  br      = branch
  brav    = branch -a -v
  brv     = branch -v
  co      = checkout
  l       = log --oneline --decorate
  lg      = log -p
  ll      = log --pretty=oneline --abbrev-commit --max-count=15
  browse  = !hub browse
  compare = !hub compare



[branch]
  autosetupmerge = true

[push]
  default = tracking
