#!/usr/bin/env ruby

data = STDIN.read

data.gsub!(/name\s*=\s*GIT_NAME/, "name = #{ ENV['GIT_NAME'] } # GIT_NAME")
data.gsub!(/email\s*=\s*GIT_EMAIL/, "email = #{ ENV['GIT_EMAIL'] } # GIT_EMAIL")
data.gsub!(/user\s*=\s*GITHUB_USER/, "user = #{ ENV['GITHUB_USER'] } # GITHUB_USER")
data.gsub!(/token\s*=\s*GITHUB_TOKEN/, "token = #{ ENV['GITHUB_TOKEN'] } # GITHUB_TOKEN")

puts data
